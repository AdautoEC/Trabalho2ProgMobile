<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="52dp"
        android:layout_height="35dp"
        android:text="Button"
        app:icon="@drawable/ic_baseline_chevron_left_24"
        app:iconTint="#000000"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="26dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="158dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:text="Cadastrar"
        android:textColor="@color/preto"
        android:textSize="36dp"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:layout_editor_absoluteX="16dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edtInputNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/branco"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:hint="@string/digite_o_nome"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edtInputNome2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/branco"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:hint="@string/digite_o_nome"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/edtInputNome"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edtInputNome3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/branco"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:hint="@string/digite_o_nome"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/edtInputNome2"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edtInputNome4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/branco"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:hint="@string/digite_o_nome"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/edtInputNome3"
        tools:layout_editor_absoluteX="6dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="399dp"
        android:layout_height="60dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="@color/preto"
        android:text="CADASTRAR"
        android:textColor="@color/branco"
        app:layout_constraintTop_toBottomOf="@+id/edtInputNome4"
        tools:layout_editor_absoluteX="6dp" />


</androidx.constraintlayout.widget.ConstraintLayout>