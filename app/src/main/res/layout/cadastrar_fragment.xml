<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aplicacao.cadastro.CadastrarFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_cadastrar_back"
            android:layout_width="52dp"
            android:layout_height="35dp"
            android:text="Button"
            android:background="@color/float_transparent"
            app:icon="@drawable/ic_baseline_chevron_left_24"
            app:iconTint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.018" />

        <TextView
            android:id="@+id/txt_cadastrar"
            android:layout_width="158dp"
            android:layout_height="46dp"
            android:layout_marginTop="24dp"
            android:text="Cadastrar"
            android:textColor="@color/preto"
            android:textSize="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.063"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_cadastrar_back"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_nome_completo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/branco"
            android:fitsSystemWindows="true"
            android:gravity="center"
            android:hint="@string/nome_completo"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_cadastrar" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/branco"
            android:fitsSystemWindows="true"
            android:gravity="center"
            android:hint="@string/email"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/input_nome_completo"
            tools:layout_editor_absoluteX="0dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/branco"
            android:fitsSystemWindows="true"
            android:gravity="center"
            android:hint="@string/pass"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/input_email"
            tools:layout_editor_absoluteX="0dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/branco"
            android:fitsSystemWindows="true"
            android:gravity="center"
            android:hint="@string/confirm_pass"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/input_password"
            tools:layout_editor_absoluteX="6dp" />

        <Button
            android:id="@+id/btn_cadastrar"
            android:layout_width="399dp"
            android:layout_height="60dp"
            android:layout_marginTop="22dp"
            android:backgroundTint="@color/preto"
            android:text="CADASTRAR"
            android:textColor="@color/branco"
            app:layout_constraintTop_toBottomOf="@+id/input_confirm_password"
            tools:layout_editor_absoluteX="6dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>